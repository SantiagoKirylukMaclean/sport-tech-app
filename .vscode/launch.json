{
  "version": "0.2.0",
  "configurations": [
    {
      // iPad Simulator
      "name": "Debug iPad (local Supabase)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      // Usa el deviceId que te da `flutter devices`
      "deviceId": "C0B0331C-647B-4D74-A928-5FDCD74AA997",
      // Carga las vars desde .env.json
      "toolArgs": [
        "--dart-define-from-file=.env.json"
      ]
    },
    {
      // Chrome
      "name": "Debug Chrome (local Supabase)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "deviceId": "chrome",
      "toolArgs": [
        "--dart-define-from-file=.env.json"
      ]
    },
    {
      // macOS desktop (por si quieres probarlo en escritorio)
      "name": "Debug macOS (local Supabase)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "deviceId": "macos",
      "toolArgs": [
        "--dart-define-from-file=.env.json"
      ]
    },
    {
      // Pixel 9a Android Emulator
      "name": "Debug Pixel 9a (local Supabase)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "deviceId": "emulator-5554",
      "toolArgs": [
        "--dart-define-from-file=.env.android.json"
      ]
    }
  ]
}
