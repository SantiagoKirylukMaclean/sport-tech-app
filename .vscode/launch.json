{
  "version": "0.2.0",
  "configurations": [
    {
      // iPad Simulator
      "name": "Debug iPad (Stage)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      // Usa el deviceId que te da `flutter devices`
      // MacBook Pro
      "deviceId": "C0B0331C-647B-4D74-A928-5FDCD74AA997",
      // Mini Mac
      //"deviceId": "541433E4-BBDB-4AB2-81C7-0C9759B8EBDB",
      // Carga las vars desde .env.json
      "toolArgs": [
        "--dart-define-from-file=.env.ios.json"
      ]
    },
    {
      // iPad Simulator Release
      "name": "Release iPad (Stage)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      // MacBook Pro
      "deviceId": "C0B0331C-647B-4D74-A928-5FDCD74AA997",
      // Mini Mac
      //"deviceId": "541433E4-BBDB-4AB2-81C7-0C9759B8EBDB",
      "flutterMode": "release",
      "toolArgs": [
        "--dart-define-from-file=.env.ios.json"
      ]
    },
    {
      // Chrome
      "name": "Debug Chrome (Stage)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "deviceId": "chrome",
      "toolArgs": [
        "--dart-define-from-file=.env.chrome.json",
        "--web-port=57200"
      ]
    },
    {
      // Chrome Release
      "name": "Release Chrome (Stage)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "deviceId": "chrome",
      "flutterMode": "release",
      "toolArgs": [
        "--dart-define-from-file=.env.chrome.json",
        "--web-port=57200"
      ]
    },
    {
      // Pixel 9a Android Emulator
      "name": "Debug Pixel 9a (Stage)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "deviceId": "emulator-5554",
      "toolArgs": [
        "--dart-define-from-file=.env.android.json"
      ]
    },
    {
      // Pixel 9a Android Emulator Release
      "name": "Release Pixel 9a (Stage)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "deviceId": "emulator-5554",
      "flutterMode": "release",
      "toolArgs": [
        "--dart-define-from-file=.env.android.json"
      ]
    }
  ]
}
